{
  "expo": {
    "name": "BLOOMI",
    "slug": "bloomi-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "bloomi",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seonghanim.bloomi",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "BLOOMI가 음식 사진을 촬영하기 위해 카메라 접근이 필요합니다.",
        "NSPhotoLibraryUsageDescription": "BLOOMI가 음식 사진을 선택하기 위해 사진 접근이 필요합니다.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.seonghanim.bloomi",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "BLOOMI가 음식 사진을 촬영하기 위해 카메라 접근이 필요합니다."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "BLOOMI가 음식 사진을 선택하기 위해 사진 접근이 필요합니다."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "575a35ff-2a83-403e-ab68-6dda3962662d"
      }
    },
    "owner": "seonghanim"
  }
}
